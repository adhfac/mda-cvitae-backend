{
  "openapi": "3.0.0",
  "info": {
    "version": "v1.0.0",
    "title": "Company Profile API Documentation",
    "description": "Dokumentasi untuk semua endpoint dari API Company Profile"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Local Development Server"
    },
    {
      "url": "https://mda-cvitae-backend.vercel.app/api",
      "description": "Deployed Server"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Endpoint untuk autentikasi user (Register, Login, Profile)"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequest"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequest"
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        }
      }
    },
    "/auth/me": {
      "get": {
        "tags": [
          "Auth"
        ],
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/media/upload-single": {
      "post": {
        "tags": [
          "Media"
        ],
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "security": [
          {
            "bearerAuth": {}
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/media/upload-multiple": {
      "post": {
        "tags": [
          "Media"
        ],
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "security": [
          {
            "bearerAuth": {}
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "files": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/media/delete": {
      "delete": {
        "tags": [
          "Media"
        ],
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "security": [
          {
            "bearerAuth": {}
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RemoveMediaRequest"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/RemoveMediaRequest"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "RegisterRequest": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "example": "Josep Guardiola"
          },
          "username": {
            "type": "string",
            "example": "mdaaa"
          },
          "email": {
            "type": "string",
            "example": "mdha@yopmail.com"
          },
          "password": {
            "type": "string",
            "example": "Aku12345"
          },
          "confirmPassword": {
            "type": "string",
            "example": "Aku12345"
          }
        },
        "xml": {
          "name": "RegisterRequest"
        }
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "identifier": {
            "type": "string",
            "example": "mdaaaa"
          },
          "password": {
            "type": "string",
            "example": "Aku12345"
          }
        },
        "xml": {
          "name": "LoginRequest"
        }
      },
      "RemoveMediaRequest": {
        "type": "object",
        "properties": {
          "fileUrl": {
            "type": "string",
            "example": "File URL"
          }
        },
        "xml": {
          "name": "RemoveMediaRequest"
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "meta": {
            "type": "object",
            "properties": {
              "status": {
                "type": "number",
                "example": 200
              },
              "message": {
                "type": "string",
                "example": "Success message"
              }
            }
          },
          "data": {
            "type": "object",
            "properties": {}
          }
        },
        "xml": {
          "name": "SuccessResponse"
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "meta": {
            "type": "object",
            "properties": {
              "status": {
                "type": "number",
                "example": 400
              },
              "message": {
                "type": "string",
                "example": "Error message"
              }
            }
          },
          "data": {
            "type": "object",
            "properties": {}
          }
        },
        "xml": {
          "name": "ErrorResponse"
        }
      },
      "TokenResponse": {
        "type": "object",
        "properties": {
          "meta": {
            "type": "object",
            "properties": {
              "status": {
                "type": "number",
                "example": 200
              },
              "message": {
                "type": "string",
                "example": "Login Success"
              }
            }
          },
          "data": {
            "type": "object",
            "properties": {
              "token": {
                "type": "string",
                "example": "jwt_token_here"
              }
            }
          }
        },
        "xml": {
          "name": "TokenResponse"
        }
      },
      "UserProfileResponse": {
        "type": "object",
        "properties": {
          "meta": {
            "type": "object",
            "properties": {
              "status": {
                "type": "number",
                "example": 200
              },
              "message": {
                "type": "string",
                "example": "Success Get Profile"
              }
            }
          },
          "data": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string",
                "example": "6651a98fb82eaa9ff8c27c32"
              },
              "fullName": {
                "type": "string",
                "example": "M Dhafa Alhaq"
              },
              "username": {
                "type": "string",
                "example": "mdha"
              },
              "email": {
                "type": "string",
                "example": "mdha@yopmail.com"
              },
              "role": {
                "type": "string",
                "example": "member"
              },
              "profilePicture": {
                "type": "string",
                "example": "user.jpg"
              },
              "isActive": {
                "type": "boolean",
                "example": true
              },
              "createdAt": {
                "type": "string",
                "example": "2025-10-24T10:00:00.000Z"
              }
            }
          }
        },
        "xml": {
          "name": "UserProfileResponse"
        }
      }
    }
  }
}